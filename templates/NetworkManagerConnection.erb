[connection]
id=<%= @name %>
uuid=<%= @real_uuid %>
type=wifi

[wifi]
ssid=<%= @name %>
mode=infrastructure
<% if @mac -%>
mac-address=<%= @mac %>
<% end -%>

<% if @real_psk -%>
[wifi-security]
key-mgmt=wpa-psk
auth-alg=open
psk=<%= @real_psk %>
<% end -%>

[ipv4]
method=auto
<% if @dns.size > 0 -%>
dns=<%= @dns.map { |server| "#{server};" }.join %>
ignore-auto-dns=true
<% end -%>

[ipv6]
method=auto
ip6-privacy=2
